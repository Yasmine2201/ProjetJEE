<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">

        <class>fr.efrei.teachfinder.entities.ApplicationUser</class>
        <class>fr.efrei.teachfinder.entities.Registration</class>
        <class>fr.efrei.teachfinder.entities.School</class>
        <class>fr.efrei.teachfinder.entities.Recruiter</class>
        <class>fr.efrei.teachfinder.entities.Teacher</class>
        <class>fr.efrei.teachfinder.entities.Application</class>
        <class>fr.efrei.teachfinder.entities.Candidature</class>
        <class>fr.efrei.teachfinder.entities.Disponibilities</class>
        <class>fr.efrei.teachfinder.entities.Experience</class>
        <class>fr.efrei.teachfinder.entities.Need</class>
        <class>fr.efrei.teachfinder.entities.Refs</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/teach_finder_db"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value="root"/>
        </properties>
    </persistence-unit>
</persistence>
